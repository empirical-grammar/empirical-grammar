<div class="container account-form">
  <div class="sign-in-header text-center">
  <h3>Welcome Back to Quill</h3>
    <div class="text-center">
      <div class="auth-section">
        <a href='/auth/google_oauth2'>
          <button class="google-login">
            <img src='/images/google_icon.svg'/>
            <span>Login with Google</span>
          </button>
        </a>
        <a href=<%="https://clever.com/oauth/authorize?#{ {response_type: 'code', redirect_uri: Clever::REDIRECT_URL, client_id: Clever::CLIENT_ID, scope: QuillClever.scope}.to_param }"%>>
          <button class="clever-login">
            <img src='/images/clever_icon.svg'/>
            <span>Login with Clever</span>
          </button>
        </a>
      </div>
      <div class='need-a-border'></div>
      <br/>
      <div class="login-form">
        <%= react_component('LoginFormApp') %>
        <div class='password-and-signup'>
          <a href="/password_reset">Forgot your password?</a>
          <a href="/account/new">New to Quill? Sign up here</a>
        </div>
        <div class='password-hint'>
          <h4>Password not working? Here is a hint:</h3>
          <p>
            If your teacher created your account, your username is your first and last name combined with your classcode. For example:
          </p>
          <div>
            <code>
              John.Smith@magic-apple
            </code>
          </div>
          <p>
            Your password is your last name with the first letter capitalized.
            <br>
            For example:
            <div>
              <code>
                Smith
              </code>
            </div>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag('cookie_warning.js') %>
