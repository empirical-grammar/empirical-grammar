.control-group
  = f.label :link, class: 'control-label'
  .controls
    = f.text_field :link
.control-group
  = f.label :position, class: 'control-label'
  .controls
    = f.select :position, 1.upto(f.object.order_scope.count + 1).to_a
.control-group
  = f.label :image, class: 'control-label'
  .controls
    = f.file_field :image
.control-group
  = f.label :text, class: 'control-label'
  .controls
    = f.text_area :text
.form-actions
  = f.submit 'Save', class: 'btn btn-primary', :'data-disable-with' => 'Saving...'
