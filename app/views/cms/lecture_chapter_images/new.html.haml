%h2 New lecture chapter image

= form_for @lecture_chapter_image, url: cms_lecture_chapter_images_path, html: {class: 'form-horizontal'} do |f|
  .control-group
    = f.label :lecture_chapter_id, class: 'control-label'
    .controls
      = f.select :lecture_chapter_id, CMS::LectureChapture.all.collect {|r| [ r.title, r.id ] }
  .control-group
    = f.label :image_file, class: 'control-label'
    .controls
      = f.file_field :image_file
  .form-actions
    = f.submit 'Save', class: 'btn btn-primary', :'data-disable-with' => 'Saving...'
