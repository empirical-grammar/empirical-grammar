%h2 Lecture chapters

= link_to 'New lecture chapter', new_cms_lecture_chapter_path

%table.table
  %thead
    %tr
      %th Id
      %th Lecture
      %th Title
      %th Subtitle
      %th Position
      %th Youtube embed code
      %th Citation text
      %th Reading text
      %th Annotatable text
      %th Chart embed code
      %th Globe embed code
      %th Quiz embed code
      %th Slideshow embed code
      %th

  %tbody
    - @lecture_chapters.each do |lecture_chapter|
      %tr
        %td= lecture_chapter.id
        %td
          - if lecture_chapter.lecture.present?
            = link_to lecture_chapter.lecture.title, cms_lecture_path(lecture_chapter.lecture)
        %td= lecture_chapter.title
        %td= lecture_chapter.subtitle
        %td= lecture_chapter.position
        %td= lecture_chapter.youtube_embed_code
        %td= lecture_chapter.citation_text
        %td= lecture_chapter.reading_text
        %td= lecture_chapter.annotatable_text
        %td= lecture_chapter.chart_embed_code
        %td= lecture_chapter.globe_embed_code
        %td= lecture_chapter.quiz_embed_code
        %td= lecture_chapter.slideshow_embed_code
        %td
          = link_to 'Edit', edit_cms_lecture_chapter_path(lecture_chapter)
          = link_to 'Destroy', cms_lecture_chapter_path(lecture_chapter), confirm: 'are you sure?', method: 'delete'

= paginate @lecture_chapters
