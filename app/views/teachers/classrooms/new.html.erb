<%= render partial: 'teachers/shared/scorebook_tabs' %>

<%= render partial: 'teachers/classrooms/subnav' %>

<%= javascript_include_tag 'jquery.js' %>

<div class="container">

  <section class="no-border create-a-class">
    <h1 class="section-header">Create Your Class</h1>

    <%= form_for [:teachers, @classroom] do |f| %>
      <div class='row'>
        <div class='col-xs-12'>
          <div class='newline-error'>
            <p><%= @classroom.errors.full_messages_for(:name).first %></p>
            <p><%= @classroom.errors.full_messages_for(:grade).first %></p>
          </div>
          <%= f.text_field :name, class: 'big-input', placeholder: 'Class Name' %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-12 grade-select-column'>
          <%= f.select :grade, Classroom::GRADES, {prompt: 'Grade'}, class: 'grade-select' %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-12'>
          <%= f.label :code, "Class Code" %>
          <%= f.text_field :code, class: 'inactive class-code', :readonly => true%> %>
          <span class='generate-code'>Generate a New Code</span>
        </div>
      </div>



      <%= f.submit 'Create Class', class: 'button-green' %>
    <% end %>

  </section>

</div>
