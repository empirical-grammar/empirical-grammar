= form_for @lesson do |f|
  - if @lesson.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lesson.errors.count, "error")} prohibited this lesson from being saved:"
      %ul
        - @lesson.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :order
    = f.number_field :order
  .field
    = f.label :rule_id
    = f.number_field :rule_id
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :chapter_id
    = f.number_field :chapter_id
  .actions
    = f.submit 'Save'
