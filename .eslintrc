{
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "es6": true,
    "es2017": true,
    "es2020": true
  },
  "plugins": [
    "react",
    "@typescript-eslint/eslint-plugin"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": "error",
    "for-direction": "error",
    "no-cond-assign": "error",
    "no-plusplus": ["error", {"allowForLoopAfterthoughts": true}],
  },
}
