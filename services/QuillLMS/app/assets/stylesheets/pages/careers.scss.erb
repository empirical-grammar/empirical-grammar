.container.pages-container.careers-page {
  padding-right: 15px;
  padding-left: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.careers-page {
  font-size: 16px;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.5;
  letter-spacing: normal;
  color: #000;

  .header {
    margin-top: 121px;
    display: flex;
    flex-direction: column;
    align-items: center;
    h1 {
      margin-top: 0px;
      line-height: 1.5;
      font-size: 30px;
      font-weight: bold;
    }
    p {
      max-width: 630px;
      text-align: center;
      margin: 16px 0px 24px;
    }
  }

  h2 {
    font-size: 24px;
    font-weight: bold;
    color: #000000;
    line-height: 1.5;
  }

  p {
    margin-top: 8px !important;
    margin-bottom: 28px;
  }

  ol {
    margin-top: 8px;
    padding-left: 1em;

    li {
      line-height: 2;
    }
  }


  a:hover {
    text-decoration: none;
  }

  p.img-caption {
    color: #646464;
    line-height: 1.57;
    font-size: 14px !important;
  }

  .text-and-image {
    display: flex;
    align-items: center;
    margin: 120px auto 0px;

    div {
      padding: 5px;

      h2 {
        margin-top: 0px;
      }
    }

    div:nth-child(n+2), img:nth-child(n+2) {
      margin-left: 56px;
    }

    img {
      width: auto;
    }
  }

  .flex-reverse {
    flex-direction: row-reverse;
    justify-content: flex-end;
    div:nth-child(n+2), img:nth-child(n+2) {
      margin-right: 150px;
      margin-left: 0px;
    }
  }

  .img-gallery {
    .img-row {
      display: flex;
      padding-top: 54px;

      div:nth-child(1n+2) {
        padding-left: 40px;
      }

      img {
        height: auto;
        width: auto;
        max-width: 100%;
      }
    }

  }

  .job-listings {
    margin-top: 120px;
    margin-bottom: 80px;
    width: 100%;

    .job-board {
      display: flex;
      flex-direction: column;
      margin-top: 8px;
      padding: 32px;
      border-radius: 6px;
      border: solid 1px #e0e0e0;

      .job-section:nth-child(n+2) {
        margin-top: 48px;
      }

      .job-section {
        display: flex;
        flex-direction: row;
        justify-content: space-between;


        h3 {
          font-size: 16px;
          font-weight: bold;
          margin: 14px;
          width: 200px;
        }
        .positions {
          flex: 1 1 auto;
          display: flex;
          flex-direction: column;

          a:hover {
            background-color: #f2f2f2;
          }

          .position {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            margin: 14px;

            img.icon-img {
              transform: rotate(270deg);
            }
          }
        }
      }
    }
  }

  @media only screen and (max-width: 900px) {
    .hide-mobile {
      display: none;
    }

    .cta-banner {
      width: 100%;
    }

    .text-and-image {
      flex-direction: column;
      align-items: flex-start;
      margin-top: 48px;
      div:nth-child(n+2), img:nth-child(n+2) {
        margin-right: 0px;
        margin-left: 0px;
      }
    }

    .flex-reverse {
      flex-direction: column;
    }

    img {
      width: 100%;
      height: auto;
      max-width: 100%;
    }

    .img-gallery .img-row {
      flex-direction: column;
      padding-top: 54px;

      div:nth-child(1n+2) {
        padding-left: 0px;
        padding-top: 54px;
      }
    }

    .job-listings {
      margin-top: 48px;

      .job-board {
        .job-section:nth-child(n+2) {
          margin-top: 0px;
        }

        img.icon-img {
          width: 24px;
        }
      }
    }
  }
}
