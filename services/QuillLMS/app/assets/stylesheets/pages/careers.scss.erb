.container.pages-container.careers-page {
  padding-right: 0px;
}

.careers-page {
  font-size: 16px;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.5;
  letter-spacing: normal;
  color: #666666;

  h3 {
    font-size: 30px;
  }

  a:hover {
    text-decoration: none;
  }

  .cta-banner {
    background-image: url(<%= "#{ENV['CDN_URL']}/images/careers/classroom-raising-hands@2x.jpg" %>);
    background-size: cover;
    display: flex;
    align-items: center;
    justify-content: center;

    width: 950px;
    height: 350px;
    object-fit: contain;
    position: relative;

    .cta-banner-contents {
      text-align: center;
      color: #ffffff;
      position: absolute;
      top: 50%;
      -ms-transform: translateY(-50%);
      transform: translateY(-50%);

      button {
        margin: 24 auto;
        display: block;
        width: 182px;
      }
    }
  }

  .clear {
    clear: both;
  }

  .float-left {
    float: left;
  }

  .float-right {
    float: right;
  }

  .text-and-image {
    margin-top: 120px;
    .float-left {
      margin-right: 150px;
    }
    .float-right {
      margin-left: 150px;
    }
  }

  .img-gallery {
    img {
      padding-top: 54px;
    }
  }

  .job-listings {
    margin-top: 120px;
    margin-bottom: 80px;

    .job-board {
      display: flex;
      flex-direction: column;
      margin: 8px;
      padding: 32px;
      border-radius: 6px;
      border: solid 1px #e0e0e0;

      .job-section {
        display: flex;
        flex-direction: row;
        justify-content: space-between;


        h3 {
          font-size: 16px;
          font-weight: bold;
          margin: 14px;
          width: 200px;
        }
        .positions {
          flex: 1 1 auto;
          display: flex;
          flex-direction: column;

          .position {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            margin: 14px;
  
            img {
              transform: rotate(270deg);
            }
          }
        }
      }
    }
  }
}
