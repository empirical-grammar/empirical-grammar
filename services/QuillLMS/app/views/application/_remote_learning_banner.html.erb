<% if !current_user || current_user.teacher? %>
  <div class="covid-banner" id="remote-learning-banner">
    <div class="content-container">
      <img alt="Earth icon with pin in it" class="banner-icon" src=<%= "#{ENV['CDN_URL']}/images/icons/earth-pin.svg" %>>
      <p>We're here to support anyone impacted by school closures. <a href="/teacher-center/remote-learning-support-from-quillorg">Activate free Quill Premium</a> through the end of the 2019/2020 school year and <a href="/teacher-center/4-tips-to-maximize-remote-learning-with-quill">learn more about remote learning with Quill</a>.</p>
      <img alt="White X" id="close-remote-learning-banner" src=<%= "#{ENV['CDN_URL']}/images/icons/close-white.svg" %>>
    </div>
  </div>

  <script>
    window.addEventListener('load', function(e) {
      if (document.cookie.indexOf('remote_learning_banner_closed=1') === -1) {
        document.getElementById('remote-learning-banner').style.display = 'block';
      }
    });

    document.getElementById('close-remote-learning-banner').addEventListener('click', function(e) {
        e.preventDefault();
        document.getElementById('remote-learning-banner').style.display = 'none';
        let date = new Date();
        date.setTime(date.getTime()+(24*60*60*1000));
        document.cookie = `remote_learning_banner_closed=1; expires=${date.toGMTString()}`;
    }, false);

  </script>
<% end %>
