<% current_path = request.env['PATH_INFO'] %>
<% on_sign_up_or_log_in = ['account/new', '/session', 'password_reset', 'sign-up'].any? { |str| current_path.include?(str)} %>

<% navbar_class_name = on_sign_up_or_log_in ? "sign-up-or-login-navbar navbar" : "navbar" %>

<% if !in_assignment_flow? %>
  <nav class="<%=navbar_class_name%>" role="navigation">
  	<div class="container">
  		<%= render partial: 'sub_header' %>
  	</div>
  </nav>
<% end %>
