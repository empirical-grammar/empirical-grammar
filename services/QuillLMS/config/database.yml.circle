test_env: &test_env
  encoding: unicode
  host:     localhost
  database: <%= ENV.fetch("PG_DB") %>
  user: <%= ENV.fetch("PG_USER") %>

test:
  adapter: postgresql_makara
  makara:
    id: postgres_test_db
    disable_blacklist: true
    sticky: true
    master_ttl: 60
    connections:
      - role: master
        name: leader
        <<: *test_env
      - role: slave
        name: replica
        <<: *test_env
